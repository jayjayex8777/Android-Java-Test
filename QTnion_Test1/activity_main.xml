<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

  <TextView
      android:id="@+id/tvTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Diagonal-axis Rotation (TL ➜ BR) via Quaternion (Madgwick)"
      android:textStyle="bold"
      android:textSize="16sp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:paddingBottom="8dp"/>

  <TextView
      android:id="@+id/tvAngle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Diagonal-axis angle: ---.--°"
      android:textSize="36sp"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/tvTitle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"/>

  <TextView
      android:id="@+id/tvQuat"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="q = [w=1.0000, x=0.0000, y=0.0000, z=0.0000]"
      android:textSize="14sp"
      app:layout_constraintTop_toBottomOf="@id/tvAngle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:paddingTop="4dp"/>

  <TextView
      android:id="@+id/tvDt"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="dt=--.- ms"
      android:textSize="14sp"
      app:layout_constraintTop_toBottomOf="@id/tvQuat"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:paddingTop="4dp"/>

  <TextView
      android:id="@+id/tvStatus"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Status"
      android:textSize="14sp"
      app:layout_constraintTop_toBottomOf="@id/tvDt"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:paddingTop="8dp"
      android:paddingBottom="8dp"/>

  <Button
      android:id="@+id/btnReset"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="RESET (Set current = 0°)"
      app:layout_constraintTop_toBottomOf="@id/tvStatus"
      app:layout_constraintStart_toStartOf="parent"
      android:paddingTop="4dp"
      android:paddingBottom="8dp"/>

  <!-- G-force: RESET 버튼 아래, tvAngle과 동일한 스타일(36sp, bold) -->
  <TextView
      android:id="@+id/tvGForce"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="G-force: ---.--- g  (|a|=---- m/s²)"
      android:textSize="36sp"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/btnReset"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:paddingTop="12dp"
      android:paddingBottom="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
