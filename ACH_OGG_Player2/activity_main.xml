<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACH OGG Player (Audio & Haptic: separate files)"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <!-- ===== 파일 선택 영역 ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_pick"
            android:textStyle="bold"
            android:paddingBottom="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnPickAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_pick_audio"/>

            <Button
                android:id="@+id/btnPickHaptic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_pick_haptic"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAudioPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_audio_path"
            android:textSize="12sp"
            android:paddingTop="6dp"/>

        <TextView
            android:id="@+id/tvHapticPath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_haptic_path"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:paddingBottom="8dp"/>

        <!-- ===== 오디오 컨트롤 ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_audio"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_play"/>

            <Button
                android:id="@+id/btnPause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_pause"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_stop"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvAudioTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_audio_time" />

        <SeekBar
            android:id="@+id/seekAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/seekbar_audio_desc"
            android:max="1000" />

        <!-- ===== 햅틱 컨트롤 (오디오와 독립, 다른 파일 가능) ===== -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/section_haptic"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:paddingBottom="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/btnHapticPlay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_haptic_play"/>

            <Button
                android:id="@+id/btnHapticPause"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_haptic_pause"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnHapticStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_haptic_stop"
                android:layout_marginStart="8dp"/>

            <Button
                android:id="@+id/btnHapticResync"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_haptic_resync"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingTop="6dp">

            <Button
                android:id="@+id/btnDesyncMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_desync_minus"/>

            <Button
                android:id="@+id/btnDesyncPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_desync_plus"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvHapticTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_haptic_time" />

        <SeekBar
            android:id="@+id/seekHaptic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/seekbar_haptic_desc"
            android:max="1000" />

        <!-- 정보 -->
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_info"
            android:paddingTop="12dp"/>
    </LinearLayout>
</ScrollView>
